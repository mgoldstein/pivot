function pivot_hero_old_entity_info_alter(&$entity_info) {
  $entity_info['node']['view modes']['hero_display'] = array(
    'label' => t('Hero Display'),
    'custom settings' => TRUE,
  );
}
function pivot_hero_old_preprocess_node(&$variables) {
  if($variables['view_mode'] == 'hero_display') {
    dpm($variables, 'variables');
  }
}









