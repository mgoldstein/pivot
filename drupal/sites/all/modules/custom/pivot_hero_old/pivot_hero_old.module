function pivot_hero_old_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array();
  $settings = $display['settings'];
  switch ($display['type']) {
    case 'pivot_hs':
      $element = array(
      '#theme' => 'pivot_hero_old_format',
      '#items' => $items,
      '#list_style' => 'thumb',
      '#entity_data' => $entity
      );
      break;
  }
  return $element;
}
