function pivot_hero_old_preprocess_page(&$variables) {
  if($variables['is_front'] == TRUE) {
    drupal_add_js(drupal_get_path('module', 'pivot_hero_old'). '/js/tpmodal.jquery.js');
    drupal_add_js(drupal_get_path('module', 'pivot_hero_old'). '/js/tpslide.jquery.js');
    drupal_add_js(drupal_get_path('module', 'pivot_hero_old'). '/js/tpselect.jquery.js');
    drupal_add_js(drupal_get_path('module', 'pivot_hero_old'). '/js/pivot-hero-script.js');
  }
}
function pivot_hero_old_preprocess_html(&$variables) {
  if($variables['is_front'] == TRUE) {
    $variables['classes_array'][] = 'home';
  }
}
function pivot_hero_old_preprocess_views_view(&$variables) {
  $variables['classes_array'][] = 'slide-wrapper';
}

